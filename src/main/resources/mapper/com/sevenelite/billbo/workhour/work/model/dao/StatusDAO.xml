<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sevenelite.billbo.workhour.work.model.dao.StatusDAO">
 	<resultMap id="statusResult" type="WorkStatusDTO">
 	<id column="MEMBMER_NO" property="memNo"/>
 	<result column="WORKDATE" property="date"/>
 	<result column="COMMUTE" property="commute"/>
 	<result column="LEAVE_WORK" property="lDate"/>
 	<result column="WORKTYPE_CODE" property="type"/>
 	</resultMap>
 	
	<resultMap id="typeResult" type="WorkTypeDTO">
		<id property="WORKTYPE_CODE" column="code"/>
		<result property="WORKTYPE_TYPE" column="type"/>
	</resultMap>
	
	<resultMap id="workResult" type="WorkDTO">
	<id column="WEEK_WORK_STATISTIC_NO" property="wSTNo"/>
	<result column="STATISTIC_DATE" property="sTDate"/>
	<result column="TOTAL_WORK_HOURS" property="totalWork"/>
	<result column="TOTAL_EXTRA_WORK_HOURS" property="extraWork"/>
	<result column="WORK_LATE_COUNT" property = "lateCount"/>
	<result column="WORK_COUNT" property="workCount"/>
	<result column="MEMBER_NO" property="MemNo"/>
	</resultMap>
	
	<select id="selectAllStatus" resultMap="statusResult" parameterType="WorkStatusDTO">
	SELECT
          WORKSTATUS_NO
        , WORKDATE
		, COMMUTE
		, LEAVE_WORK
		, MEMBER_NO
	    , WORKTYPE_CODE
       		
   <!--     , C.WORKDATE
       , C.COMMUTE
       , C.LEAVE_WORK
       , C.MEMBER_NO
       , C.WORKTYPE_CODE -->
		FROM BB_WORKSTATUS
		<!-- JOIN BB_MEMBER B ON (A.MEMBER_NO = B.MEMBER_NO)
        JOIN BB_WORKSTATUS C ON (C.MEMBER_NO = C.MEMBER_NO) -->
	</select>
 </mapper>   